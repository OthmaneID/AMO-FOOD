    <link rel="stylesheet" href="CSS/Login.css">
    <title>Login</title>
</head>
<body>
    <form action="/login" method="post">
    <div class="Info ">
        <h1>For Admin Only</h1>
        <span class=" fas fa-user account"></span>
        <div class="parent user_section">
            <span class="icons fas fa-user-circle"></span>
            <input type="text" name="UserName" id="UserName" placeholder="UserName">
        </div>
        <div class="parent pass_section">
            <span class="icons fas fa-lock"></span>
            <input type="password" name="password" id="password" placeholder="Password"><br>
            <span style="color: red;"><%=erreur%></span>
        </div>
          <button type="submit" onclick="window.location.href ='./Admin.ejs'">Login</button>
    </div>

    

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.6.0/dist/umd/popper.min.js" integrity="sha384-KsvD1yqQ1/1+IA7gi3P0tyJcT3vR+NdBTt13hSJ2lnve8agRGXTTyNaBYmCR/Nwi" crossorigin="anonymous"></script>
