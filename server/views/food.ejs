<div class="box-principal flexing">
   <!-- Shopping Side Box -->
    <div class="box-right">
        <app-cart  class="cart flexing flexing-space-between flexing-column" >
            <div  class="header-cart">
                <div class="Hide-Cart fas fa-arrow-circle-down"></div>
                <!-- Panier Header-->
                <div class="cart-resume">
                    <div  class="boxing-cart">
                        <i  class="icon-cart">
                        </i>
                        <div style="display: flex;">
                            <i class="fas fa-shopping-cart fa-2x " style="margin-right: 10px;" ></i>
                            <div  class="content-resume-cart">
                                <h4 class="uppercase-spacing">
                                <h4 style="font-size: 30px; font-style: italic; font-weight: bold;">panier</h4>
                            </div>
                        </div>
                    </div>
                <div  class="number-cart food-count" id="food-count">0</div>        
            </div>
            <!-- Panier Header End -->
            
        </div>
        <!-- Commandes List -->
        <h4  class="uppercase-spacing">COMMANDE</h4>
        <div  class="order-listing">
            
        </div>

    <!-- Commandes List End -->
        <!-- Card Price -->
        <div  class="price-cart">
            <div  class="sub-price">
                    <div  class="sub-sub-price" >
                        <h5  class="uppercase-spacing">sous-total</h5>
                        <span id="sous-total" ><span id="price-sous" class="price-sous">0</span> Dhs</span>
                    </div>
                    
                    <div  class="sub-sub-price" >
                        <h5  class="uppercase-spacing">Livraison </h5>
                        <span id="Livraison" class="Livraison" > <span id="Liv-Price">10</span> Dhs</span>
                    </div>
                    
            </div>
            <div  class="total-price" style="display: flex;">
                    <h5  class="uppercase-spacing" style="margin-right: 150px; ">total </h5>
                    <span  class="price-total" style="font-weight: bold;"><span id="price-tot" class="price-tot">10</span> Dhs</span>
            </div>
            <div style="width: 100%; text-align: center;">
                <div class="Order-btn" id="Order-btn">Passe Command</div>
            </div>
        </div>   
        <!-- Card Price End -->

    </app-cart>

    </div>
<!-- End Shopping Side Box -->
      

     
            <div class="box-left food-section">
                <div class="container ">
                    <div class="row food-constainer">
                    <% for (let i = 0; i < Foods.length; i++) {%>
                        <!-- Food Card -->
                        <div class="col-md-3 d-flex">
                            <div class="food glow">
                                <!-- food img +  Icons -->
                                <div class="food-img d-flex align-items-center justify-content-center"
                                style='background: url(<%=Foods[i].Image%>) top center; background-size: cover;'>
                                <!-- Icons -->
                                    <div class="icons">
                                        <p class="icon-block d-flex">
                                            <a href="" class="shopping d-flex align-items-center justify-content-center">
                                                <i class="fas fa-shopping-cart" id="shop"></i>
                                            </a>
                                            <a href="" id="<%=Foods[i]._id%>" class="eye d-flex align-items-center justify-content-center">
                                                <i class="fas fa-eye" id='eye'></i>
                                            </a>
                                            
                                        </p>
                                    </div>
                                    <!-- Icons End -->
                                </div>
                                <!-- food img + Icons END -->

                                <!-- Title + Categorie + Price -->
                                <div class="text text-center">
                                    <!-- Categorie -->
                                    <h3 class="food-title" style="color:#F8aa02;"><%=Foods[i].Name%></h3>
                                    <!-- Title -->
                                    <span class="Categorie font-weight-bold" ><%=Foods[i].Categorie%></span><br>
                                    <!-- Price -->
                                    <span class="price"><%=Foods[i].Price%>DH</span>
                                </div>
                                <!-- Title + Categorie + Price END -->
                                
                            </div>
                        </div>
                         <% } %>
            
                              
                       <!-- Food Card END -->

                    
                       <!-- Food Card END -->
                    </div>
                </div>

        </div>
        <div class="Phone-Shopping">
            <div  style="color: #fff;" class="fas fa fa-shopping-cart fa-2x"></div>
            <div class="arrow-up fas fa-arrow-circle-up"> </div>
            <div  class="number-cart" id="food-count">0</div>
        </div>
       <!-- PopUp -->
 <div class="bg-PopUp" style="display: none;">
     <div class="PopUp" style="display: flex;">
         <div class="close-PopUp">
             +
         </div>
         
            <div class="prod-img"></div>
             <div>
                <div class="prod-Titre">Titre</div>
                <div class="prod-Categ">Categorie</div>
                <div class="prod-Price">20DH</div>
                <div class="prod-Desc">
                    <span><%=Foods[0].Descritption%></span>
                </div>
                <submit class="shopping shopping-popup" id="shop">Add to Shopping Cart</submit>
            </div>
        
     </div>
 </div>
 <!-- PopUp Section End -->




<script>
    $(document).ready(function(){
         
          if($(window).width()<768)
          {
            $(".box-right").hide();

           
            $('.cat-name').hide();
            $("#categ-name").hide();
            $(".dropdown-item").click(function(e){
            $(".categ-name-Phone").text("Categorie : "+$(this).text());
            })
          }
         



            // categorie  dropdown
        $(".dropdown-item").click(function(e){
            e.preventDefault();
            $("#categ-name").text("Categorie : "+$(this).text());
        });

        $(".eye").click(function(e){
            e.preventDefault();
            
            var bg = $(this).parent().parent().parent().css('background-image');
            bg = bg.replace('url(','').replace(')','');
            $(".prod-img").css({'background':'url('+bg+') top center','background-size':'cover'});

        
            
            $(".prod-Titre").text($(this).parent().parent().parent().parent().find(".text").find(".food-title").text());
            $(".prod-Categ").text($(this).parent().parent().parent().parent().find(".text").find(".Categorie").text());
            $(".prod-Price").text($(this).parent().parent().parent().parent().find(".text").find(".price").text());
            $(".bg-PopUp").show();
        });

        $(".Hide-Cart").click(function(){
            $('.box-right').hide();
        
        });
       
        $(".arrow-up").click(function(){
            $('.box-right').show();

        })
    })
</script>






